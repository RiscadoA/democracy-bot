{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "outDir": "dist",
        "types": [
            "node"
        ],
        "typeRoots": [
           "node_modules/@types",
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ]
}